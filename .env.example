# LINE Bot Configuration
# ได้รับจาก LINE Developers Console > Messaging API settings
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# Google Sheets Configuration
# GOOGLE_SHEETS_ID: ID ของ Google Sheets ที่ใช้เก็บข้อมูล
# ได้จาก URL: https://docs.google.com/spreadsheets/d/{GOOGLE_SHEETS_ID}/edit
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_CREDENTIALS_PATH=./credentials.json

# MongoDB Configuration (Optional)
# ใช้สำหรับเก็บข้อมูลเพิ่มเติม
MONGODB_URI=mongodb://localhost:27017/line-betting-bot

# Server Configuration
PORT=3000
NODE_ENV=development

# Group Configuration
# GROUP_ID: ID ของกลุ่ม LINE ที่ใช้สำหรับส่งข้อมูล
# ได้จากการส่งข้อความจากกลุ่มไปยังบอท แล้วดู console log
# ตัวอย่าง: C1234567890abcdef1234567890abcdef
GROUP_ID=your_group_id_here
LINE_GROUP_ID=your_group_id_here

# Payment Configuration
PAYMENT_LINK=https://example.com/payment

# LIFF Configuration
# ได้รับจาก LINE Developers Console > LIFF tab
# LIFF_ID: ID หลักของ LIFF app (ใช้สำหรับทุกฟอร์ม)
# LIFF_ID_OPEN_BETTING: ID สำหรับฟอร์มเปิดรับแทง (ถ้ามี)
# LIFF_ID_RESULT_SUMMARY: ID สำหรับฟอร์มสรุปผลแข่ง (ถ้ามี)
LIFF_ID=your_liff_id_here
LIFF_ID_OPEN_BETTING=your_liff_id_open_betting_here
LIFF_ID_RESULT_SUMMARY=your_liff_id_result_summary_here
LIFF_URL=https://liff.line.me
